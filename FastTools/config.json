{
  "work_dir": "D:\\downloads",
  "requests": [
    {
      "alias": "root & remount",
      "steps": [
        { "type": "adb_command", "value": "adb -s {dev} root" },
        { "type": "delay", "value": "500" },
        { "type": "adb_command", "value": "adb -s {dev} wait-for-device" },
        { "type": "adb_command", "value": "adb -s {dev} remount" },
        { "type": "adb_command", "value": "adb -s {dev} shell setenforce 0" }
      ]
    },
    {
      "alias": "kfc",
      "steps": [
        { "type": "adb_command", "value": "adb -s {dev} shell df -h" }
      ]
    },
    {
      "alias": "df -h",
      "steps": [
        { "type": "adb_command", "value": "adb -s {dev} shell df -h" }
      ]
    },
    {
      "alias": "ls /sdcard/Download",
      "steps": [
        { "type": "adb_command", "value": "adb -s {dev} shell ls /sdcard/Download" }
      ]
    },
    {
      "alias": "pull to local dir",
      "steps": [
        { "type": "adb_command", "value": "adb -s {dev} pull /sdcard/Download/12 {local_dir}", "LocalDir": true }
      ]
    },
    {
      "alias": "pull to work dir",
      "steps": [
        { "type": "adb_command", "value": "adb -s {dev} pull /sdcard/Download/test.txt {work_dir}" }
      ]
    }
  ]
}
